---
import type { Project } from "../../types";
import { Image } from "astro:assets"
import Link from "./Link.astro";
import { slugify, formatDate } from "../ts/utils"

const { frontmatter, url} = Astro.props
---

<article class="card">
  <small>
    <a href={`/category/${slugify(frontmatter.category)}`} class="badge">{frontmatter.category}</a>
  </small>
  <a href={url}>
    <Image
      src={frontmatter.cover?.src ?? "/assets/images/fallback-image.png"}
      alt={frontmatter.cover?.alt ?? "Project cover image"}
      width="400"
      height="250"
      format="avif"
      fit="cover"
      quality={80}
    />
    <h3 class="my-1 py-2 text-2xl font-bold">{frontmatter.title}</h3>
    <p>by <a href={`/designer/${slugify(frontmatter.designer)}`}>{frontmatter.designer}</a> Â· {formatDate(frontmatter.date)}</p>
  </a>
  <Link href={url} text="Read more ..." style="secondary"/>
</article>

