---
import { slugify, formatDate } from "../ts/utils";

const { relatedPosts } = Astro.props
---

{
  relatedPosts.map((post: any) => (
    <div class="post">
      <h3 class="h4">
        <a href={post.url}>{post.frontmatter.title}</a>
      </h3>
      <small>
        <p>by <a href={`/author/${slugify(post.frontmatter.author)}`}>{post.frontmatter.author}</a> Â· {formatDate(post.frontmatter.date)}</p>
      </small>
    </div>
  ))
}