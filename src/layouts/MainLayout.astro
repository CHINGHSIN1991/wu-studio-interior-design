---
// component import
import MainHead from "./MainHead.astro"
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"

const {
  title = "My Astro Blog",
  description = "My musings about the Astro framework",
	image,
	frontmatter,
	robots
} = Astro.props;
---
<!doctype html>
<html lang="en">
	<MainHead {title} {description} {image} {frontmatter} {robots}/>
	<body>
		<Nav />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
