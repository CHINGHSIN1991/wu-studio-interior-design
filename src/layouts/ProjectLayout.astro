---
// component import
import PostHeader from "../components/PostHeader.astro";
import MainLayout from "./MainLayout.astro";
import CategoryCloud from "../components/CategoryCloud.astro";
import RelatedPosts from "../components/RelatedPosts.astro";

// utils imports
import { formatProjectPost } from "../ts/utils";


const allProjects = await Astro.glob("../pages/projects/*.md");
const formattedPosts = formatProjectPost(allProjects, {
  sortByDate: false
});


const { frontmatter } = Astro.props
const {
  title, 
  description,
  date,
  category,
  author,
  image,
} = frontmatter

const relatedPosts = formattedPosts.filter(
  (post) => post.frontmatter.category.toLowerCase() === category.toLowerCase() && post.frontmatter.title !== title
).slice(0,3)
---

<MainLayout {title} {description}>
  <PostHeader
    {title} {description} {date} {category} {image} {author}
  />
  <div class="project-content">
    <div class="content">
      <slot />
    </div>
    <div class="sidebar">
      <aside class="container" aria-label="Blog categories">
        <h2>Blog Categories</h2>
        <CategoryCloud />
      </aside>
      {
        relatedPosts.length > 0 && (
        <aside class="container" aria-label="Related posts">
          <h2>Related Posts</h2>
          <RelatedPosts {relatedPosts} />
        </aside>
        )
      }
    </div>
  </div>
</MainLayout>