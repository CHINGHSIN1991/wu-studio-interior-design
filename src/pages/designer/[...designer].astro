---

<MainLayout title={designerName}>
  <section class="container" aria-label={`Posts about ${designerName}`}>
    <h1 class="h1">Posts by {designerName}</h1>
    {posts.length === 0 ? (
      <NoResultBlock />
    ) : (
      <div class="post-container">
        {
          posts.map(
            (project) => <ProjectCard project={project} />
          )
        }
      </div>
    )}
  </section>
</MainLayout>