---
import MainLayout from '../layouts/MainLayout.astro';
import Carousel from '../components/Carousel.astro';

const carouselItems = await Astro.glob('../content/carousel/*.md');
const activeItems = carouselItems
  .filter(item => !item.frontmatter.draft && item.frontmatter.active)
  .sort((a, b) => a.frontmatter.order - b.frontmatter.order);

console.log('Active carousel items:', activeItems); //TODO check is active
---

<MainLayout>
  <Carousel items={activeItems} />
</MainLayout>

