---
import MainLayout from '../layouts/MainLayout.astro';
// import Carousel from '../components/Carousel.astro';
import { getCollection } from 'astro:content';
import { getImagePath } from '../ts/utils';

const carouselItems = await getCollection('carousel', ({ data }) => {
  return data.active && !data.draft;
});
---

<MainLayout>
  {
    carouselItems.map(item => (
      <div>
        <h1>{item.data.title}</h1>
        <p>{item.data.description}</p>
        <img src={getImagePath(item.data.image)} alt={item.data.title} />
        {item.data.link && <a href={item.data.link}>了解更多</a>}
      </div>
    ))
  }
  <!-- <Carousel items={carouselItems} /> -->
</MainLayout>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>